{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2020",
        "declaration": true,
        "declarationDir": "./dist/types",
        "sourceMap": true,
        "outDir": "./dist",
        "importHelpers": true,
        "noEmitHelpers": true,
        "moduleResolution": "node"
    },
    "exclude": [
        "node_modules",
        "dist",
        "**/__tests__/**",
        "src/examples"
    ]
}